<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Choose A CPU Cooler - Comp@Tibility</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <link rel="stylesheet" href="/mainStyles.css">
    <link rel="stylesheet" href="/build.css">
</head>
<body class="d-flex flex-column min-vh-100 bg-dark text-white">
<%- include('../partials/header') %>

<div class="container mt-4">
    <h1 class="text-center mb-4">Search Your CPU Cooler</h1>

    <div class="d-none d-md-block table-responsive rounded-3">
        <table class="table table-dark table-striped table-hover text-center align-middle">
            <thead class="table-primary">
            <tr>
                <th>#</th>
                <th>Brand</th>
                <th>Model</th>
                <th>Cooling Type</th>
                <th>Dimensions (mm)</th>
                <th>TDP (W)</th>
                <th class="actionTh">Action</th>
            </tr>
            </thead>
            <tbody>
            <% cpuCoolers.forEach((cpuCooler, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td>
                        <% if (brandsLogos[cpuCooler.brand]) { %>
                            <img src="<%= brandsLogos[cpuCooler.brand].logo %>" alt="<%=cpuCooler.brand %> Logo"
                                 height="25" style="background-color: white; padding: 5px; border-radius: 5px;">
                        <% } %>
                    </td>
                    <td><%= cpuCooler.model %></td>
                    <td><%= cpuCooler.cooling_type %></td>
                    <td><%= cpuCooler.cooler_dimensions %></td>
                    <td><%= cpuCooler.tdp %></td>
                    <td>
                        <button class="btn btn-success choose-component"
                                data-component="cpu-cooler"
                                data-id="<%= cpuCooler.id %>"
                                data-brand="<%= cpuCooler.brand %>"
                                data-model="<%= cpuCooler.model %>">
                            Choose
                        </button>
                    </td>
                </tr>
            <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Stacked cards on small screens -->
    <div class="d-md-none">
        <% cpuCoolers.forEach((cpuCooler) => { %>
            <div class="card mb-3 bg-dark text-white border-light">
                <div class="card-body text-center">
                    <h3 class="card-title text-center"><strong><%= cpuCooler.model %></strong></h3>
                    <p class="card-text text-center">
                        <strong>Brand:</strong> <%= cpuCooler.brand %> <br>
                        <strong>Cooling Type:</strong> <%= cpuCooler.cooling_type %> <br>
                        <strong>Dimensions (mm):</strong> <%= cpuCooler.cooler_dimensions %> <br>
                        <strong>TDP (W):</strong> <%= cpuCooler.tdp %> <br>
                    <button class="btn btn-success btn-sm choose-component"
                            data-component="cpu-cooler"
                            data-id="<%= cpuCooler.id %>"
                            data-brand="<%= cpuCooler.brand %>"
                            data-model="<%= cpuCooler.model %>">
                        Choose
                    </button>
                </div>
            </div>
        <% }) %>
    </div>


</div>


<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
<script src="/scripts/allowClickBasedOnUrl.js"></script>
</body>
</html>
