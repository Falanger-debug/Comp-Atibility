    <% let components = [
        {id1: "cpu", id2: "cpu", id3: "cpu", name: "CPU"},
        {id1: "cpuCooler", id2: "cpu-cooler", id3: "cpu-cooler", name: "CPU Cooler"},
        {id1: "mobo", id2: "motherboard", id3: "motherboard", name: "Motherboard"},
        {id1: "memory", id2: "memory", id3: "ram", name: "Memory"},
        {id1: "storage", id2: "storage", id3: "storage", name: "Storage"},
        {id1: "gpu", id2: "video-card", id3: "gpu", name: "Video Card"},
        {id1: "case", id2: "case", id3: "case", name: "Case"},
        {id1: "powerSupply", id2: "power-supply", id3: "power-supply", name: "Power Supply"}
    ]; %>

    <div class="d-none d-lg-block">
        <div class="row justify content-center text-center">
            <div class="col-10 offset-1">
                <div class="table-responsive rounded-3 overflow-hidden">
                    <table class="table table-dark table-striped align-middle">
                        <thead>
                        <tr>
                            <th scope="col">Component</th>
                            <th scope="col">Selection</th>
                            <th scope="col">Brand</th>
                            <th scope="col">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% components.forEach(component => { %>
                            <tr id="<%= component.id1 %>Row">
                                <td><%= component.name %></td>
                                <td id="<%= component.id2 %>-selection">None selected</td>
                                <td id="<%= component.id2 %>-brand">None selected</td>
                                <td>
                                    <a href="build/<%= component.id3 %>" class="btn btn-primary btn-sm">Change</a>
                                    <button class="btn btn-danger btn-sm clear-btn"
                                            data-component="<%= component.id2 %>">Remove
                                    </button>
                                </td>
                            </tr>
                        <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="d-lg-none">
        <div class="row g-3">
            <% components.forEach(component => { %>
                <div class="col-10 offset-1">
                    <div class="card bg-dark text-white" id="<%= component.id1 %>RowCard">
                        <div class="card-body text-center">
                            <h5 class="card-title"><%= component.name %></h5>
                            <p class="card-text">Selection: <span id="<%= component.id2 %>-selection-mobile">None selected</span></p>
                            <p class="card-text">Brand: <span id="<%= component.id2 %>-brand-mobile">None selected</span></p>
                            <a href="build/<%= component.id3 %>" class="btn btn-primary btn-sm">Change</a>
                            <button class="btn btn-danger btn-sm clear-btn" data-component="<%= component.id2 %>">Remove</button>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
