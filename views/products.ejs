<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Categories - Comp@Tibility</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <link rel="stylesheet" href="/mainStyles.css">
    <link rel="stylesheet" href="/build.css">
</head>
<body class="d-flex flex-column min-vh-100 bg-dark text-white">
<%- include('partials/header') %>

<div class="container my-5">
    <h2 class="text-center mb-4">Product Categories</h2>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <!-- CPU Card -->
        <div class="col">
            <div class="card bg-secondary text-white shadow">
                <div class="card-body text-center">
                    <i class="fas fa-microchip fa-3x mb-3"></i>
                    <h5 class="card-title">CPUs</h5>
                    <a href="/products/cpu" class="btn btn-primary">Explore</a>
                </div>
            </div>
        </div>

        <!-- CPU Coolers Card -->
        <div class="col">
            <div class="card bg-secondary text-white shadow">
                <div class="card-body text-center">
                    <i class="fas fa-snowflake fa-3x mb-3"></i>
                    <h5 class="card-title">CPU Coolers</h5>
                    <a href="/products/cpu-cooler" class="btn btn-primary">Explore</a>
                </div>
            </div>
        </div>

        <!-- Motherboards Card -->
        <div class="col">
            <div class="card bg-secondary text-white shadow">
                <div class="card-body text-center">
                    <i class="fas fa-cogs fa-3x mb-3"></i>
                    <h5 class="card-title">Motherboards</h5>
                    <a href="/products/motherboard" class="btn btn-primary">Explore</a>
                </div>
            </div>
        </div>

        <!-- RAM -->
        <div class="col">
            <div class="card bg-secondary text-white shadow">
                <div class="card-body text-center">
                    <i class="fas fa-memory fa-3x mb-3"></i>
                    <h5 class="card-title">RAM</h5>
                    <a href="/products/ram" class="btn btn-primary">Explore</a>
                </div>
            </div>
        </div>

        <!-- Storage Card -->
        <div class="col">
            <div class="card bg-secondary text-white shadow">
                <div class="card-body text-center">
                    <i class="fas fa-hdd fa-3x mb-3"></i>
                    <h5 class="card-title">Storage</h5>
                    <a href="/products/storage" class="btn btn-primary">Explore</a>
                </div>
            </div>
        </div>

        <!-- Video Cards Card -->
        <div class="col">
            <div class="card bg-secondary text-white shadow">
                <div class="card-body text-center">
                    <i class="fa-solid fa-gamepad fa-3x mb-3"></i>
                    <h5 class="card-title">Video Cards</h5>
                    <a href="/products/gpu" class="btn btn-primary">Explore</a>
                </div>
            </div>
        </div>

        <!-- Cases Card -->
        <div class="col">
            <div class="card bg-secondary text-white shadow">
                <div class="card-body text-center">
                    <i class="fas fa-archive fa-3x mb-3"></i>
                    <h5 class="card-title">Cases</h5>
                    <a href="/products/case" class="btn btn-primary">Explore</a>
                </div>
            </div>
        </div>

        <!-- Power Supplies Card -->
        <div class="col">
            <div class="card bg-secondary text-white shadow">
                <div class="card-body text-center">
                    <i class="fas fa-plug fa-3x mb-3"></i>
                    <h5 class="card-title">Power Supplies</h5>
                    <a href="/products/power-supply" class="btn btn-primary">Explore</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>
</html>
